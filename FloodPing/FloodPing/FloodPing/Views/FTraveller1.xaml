<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FloodPing.Views.FTraveller1">
  <!--<Label Text="{Binding MainText}" VerticalOptions="Center" HorizontalOptions="Center" />-->
  <ContentPage.ToolbarItems>
    <ToolbarItem Name="Main Menu" Activated="GoToMainMenu" Order="Secondary" Priority="1" />
    <ToolbarItem Name="View Saved Destinations" Activated="ViewSD" Order="Secondary" Priority="1" />
  </ContentPage.ToolbarItems>
  <StackLayout  >

    <Grid BackgroundColor="#3399ff">
      <Grid.RowDefinitions>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*" />

      </Grid.RowDefinitions>
    
    
    
    
    <Label Text="Current Location : Armidale"   TextColor="White" FontSize="25" HorizontalOptions="Center" Grid.Row="0"></Label>
    <Label Text="Destination : Ipswich"   TextColor="White" FontSize="25" HorizontalOptions="Center" Grid.Row="1">
    </Label>
    
    <Button x:Name ="MyButton"  Text="Plan Route" Clicked="LaunchFTraveller2" FontAttributes="Bold" FontSize="20" Grid.Row="2"  ></Button>
    <!--<Image Source="a1.jpg" ></Image>-->

    </Grid>

  </StackLayout>
  
</ContentPage>
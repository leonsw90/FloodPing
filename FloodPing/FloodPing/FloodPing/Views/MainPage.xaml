<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FloodPing.Views.MainPage"
             Title="FloodPing - Select User">
  <ContentPage.Content>
    <StackLayout VerticalOptions="Center" Padding="50">
      
      <Button Text="Traveller" Clicked="LaunchTraveller" FontAttributes="Bold"/>
      <Button Text="Statistics" Clicked="LaunchStatistics" FontAttributes="Bold" />
      <Button Text="Share Flood Images" Clicked="LaunchShare"  FontAttributes="Bold"/>
      <!--<Button Text="Share Flood Images" Clicked="LaunchShare" />-->
      <Button Text="Emergency - Broadcast Message" Clicked="LaunchEmergencyStrandedTravellers" FontAttributes="Bold" />
      <Button Text="Emergency - Map" Clicked="LaunchEmergencyMap" FontAttributes="Bold" />
      
    </StackLayout>
  </ContentPage.Content>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FloodPing.Views.MapDetail"
             Title ="Stranded Person Detail">
  
  <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
    <Image Source="{Binding strandedPic, StringFormat='{0:F0}'}" HorizontalOptions="CenterAndExpand" Scale="2" />
    <Label Text=" " />
    <Label Text=" " />
    <Label Text=" " />
    <Label Text=" " />
    <Label Text="{Binding strandedName, StringFormat='Name: {0:F0}'}" />
    <Label Text="{Binding strandedLocationLat, StringFormat='Latitude  : {0:F0}'}" />
    <Label Text="{Binding strandedLocationLong, StringFormat='Longtitude : {0:F0}'}" />
    <Label Text="Info :" />
    <Label Text="{Binding strandedDetail, StringFormat='{0:F0}'}" />
  </StackLayout>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FloodPing.Views.ShowStatistics">
  <!--<Label Text="{Binding MainText}" VerticalOptions="Center" HorizontalOptions="Center" />-->
  <StackLayout>

    <Label Text="Country"></Label>

    <Editor Text="Australia"></Editor>
    <Label Text="State:"/>
    <Editor Text=""/>
    <Label Text="City:"/>
    <Editor Text=""/>
    <Label Text="Postcode"/>
    <Editor Text=""/>
    <Label Text="Years"/>
    <Editor Text=""/>

    <Button Text="Get Statistics" Clicked="LaunchGraphview"></Button>


    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*"/>

      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <Button Text="2000-04" Grid.Row="0" Grid.Column="0"/>
      <Button Text="2004-08" Grid.Row="0" Grid.Column="1"/>
      <Button Text="2008-12" Grid.Row="1" Grid.Column="0"/>
      <Button Text="2012-16" Grid.Row="1" Grid.Column="1"/>

    </Grid>
  </StackLayout>
</ContentPage>